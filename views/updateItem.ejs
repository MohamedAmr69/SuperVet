<%-include("adminHeader") %>

<div class="container-fluid mt-5 p-5 w-75 shadow border">
    <form action="/updateItem" method="POST">
        <div class="row m-3 justify-content-center">
            <img src="/images/inventory_images/<%=item.image%>" class="border shadow" style="width: 250px;">
            <input type="hidden" name="id" value="<%=item._id%>">
        </div>
        <div class="row m-3 justify-content-center">
            <div class="col">
                <label class="form-label">Product Name</label>
                <input type="text" class="form-control" name="productName" value="<%=item['productName']%>">
            </div>
            <div class="col">
                <label class="form-label">Product Price</label>
                <input type="text" class="form-control" name="productPrice" value="<%=item['productPrice']%>">
            </div>
            <div class="col">
                <label class="form-label">Product Category</label>
                <input type="text" class="form-control" name="category" value="<%=item['category']%>">
            </div>
        </div>

        <div class="row m-3 justify-content-center">
            <div class="col">
                <label class="form-label">Quantity</label>
                <input type="text" class="form-control" name="quantity" value="<%=item['quantity']%>">
            </div>
            <div class="col">
                <label class="form-label">Product Description</label>
                <input type="text" class="form-control" name="description" value="<%=item['description']%>">
            </div>
            <div class="col">
                <label class="form-label">Pet Type</label>
                <input type="text" class="form-control" name="petType" value="<%=item['petType']%>">
            </div>
        </div>

        <div class="row m-3 justify-content-center">
            <div class="col text-center">
                <button type="submit" style="font-size: small; padding: 8px;" class="btn btn-primary">Update</button>
            </div>
        </div>
    </form>
</div>


<%-include("adminFooter") %>
