<%-include("adminHeader") %>

<div class="container-fluid mt-5">
    <center><div class="display-1 m-5">Inventory</div></center>
    <table class="table table-striped table-hover shadow">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Description</th>
                <th>Pet Type</th>
                <th>Image</th>
                <th>Created At</th>
                <th>Last Update</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% inventories.forEach(inventory => { %>
                <tr>
                    <td><%= inventory.productName %></td>
                    <td><%= inventory.productPrice %></td>
                    <td><%= inventory.category %></td>
                    <td><%= inventory.quantity %></td>
                    <td><%= inventory.description %></td>
                    <td><%= inventory.petType %></td>
                    <td><img src="/images/inventory_images/<%= inventory.image %>" alt="Product Image" width="50"></td>
                    <td><%= new Date(inventory.createdAt).toLocaleString() %></td>
                    <td><%= new Date(inventory.updatedAt).toLocaleString() %></td>
                    <form action="/updateItemPage" method="POST">
                        <td>
                            <input type="hidden" name="id" value="<%= inventory._id %>">
                            <button type="submit" style="border: none; background-color: transparent;"><i class="bi bi-pen-fill"></i></button>
                        </td>

                    </form>
                    <form action="/deleteItem" method="POST">
                        <td>
                            <input type="hidden" name="id" value="<%= inventory._id %>">
                            <button type="submit" style="border: none; background-color: transparent;"><i class="bi bi-archive-fill"></i></button>
                        </td>
                    </form>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%-include('adminFooter')%>