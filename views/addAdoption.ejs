<%- include('header') %>

<div class="container border w-75 my-4 p-5 post-form-container">
  <center>
    <h1 class="heading-primary">Add a Post</h1>
  </center>
  <form
    action="/addAdoptionPost"
    method="POST"
    enctype="multipart/form-data"
    class="post-form"
  >
    <div class="row my-5">
      <div class="col">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name="petName" />
      </div>
      <div class="col">
        <label class="form-label">Pet Type</label>
        <select name="petType" class="form-select">
          <option value="">Select...</option>
          <option value="cat">Cat</option>
          <option value="dog">Dog</option>
        </select>
      </div>
    </div>
    <div class="row my-5">
      <div class="col-3">
        <label class="form-label">Birth Date</label>
        <input type="date" class="form-control" name="BirthDate" />
      </div>
      <div class="col">
        <label class="form-label">Comment</label>
        <input type="text" class="form-control" name="comment" />
      </div>
    </div>
    <div class="row my-5 justify-content-center">
      <div class="col">
        <label class="form-label">Email</label>
        <input
          type="email"
          name="contactEmail"
          id="email"
          class="form-control"
        />
      </div>
      <div class="col">
        <label class="form-label">Contact Number</label>
        <input type="text" name="contactNumber" class="form-control" />
      </div>
      <div class="col">
        <label class="form-label">Image</label>
        <input type="file" name="image" id="image" class="form-control" />
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-1">
        <button type="submit" class="btn btn-outline-dark custom-btn">
          Post
        </button>
      </div>
    </div>
  </form>
</div>

<%- include('footer') %>
