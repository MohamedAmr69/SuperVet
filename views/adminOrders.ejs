<%- include('adminHeader') %>
<div class="container">
    <h1 class="heading-primary display-4 text-center mt-5">Orders</h1>
    <% if (orders.length > 0) { %> <% orders.forEach(order => {
    %>
    <div class="appointment-card mb-5">
      <div class="appointment-header text-white py-3 px-4">
        <div class="row justify-content-between">
          <div class="col-3">
        <h2 class="appointment-title">Orders Details</h2>
        </div>
        <div class="col-1 align-content-center">
        <form action="/deleteOrder" method="POST">
          <input type="hidden" name="id" value="<%=order  ._id%>">
          <button type="submit" style="background-color: transparent; border: none;"><i class="bi bi-archive-fill text-light"></i></button>
        </form>
        </div>
        </div>
      </div>
      <div class="appointment-body p-4">
        <p class="appointment-info">
          <strong>Date:</strong>
          <span class="date"
            ><%= new Date(order.createdAt).toLocaleDateString() %></span
          ><br />
          <strong>Username:</strong>
          <span class="veterinarian"><%= order.username %></span>
        </p>
        <hr class="divider" />
        <p class="appointment-info">
          <strong>Prodct Name:</strong>
          <span class="pet-name"><%= order.productName %></span><br />
          <strong>Quantity:</strong>
          <span class="pet-age"><%= order.quantity %></span><br>
          <strong>Category:</strong>
          <span class="pet-type"><%= order.category %></span><br />
          <strong>Pet type:</strong>
          <span class="pet-age"><%= order.petType %></span>
        </p>
        <hr class="divider" />
        <p class="appointment-info">
          <strong>Total Price:</strong>
          <span class="reason"><%= order.totalPrice %></span>
        </p>
      </div>
    </div>
    <% }) %> <% } else { %>
    <p class="text-center">No Orders found.</p>
    <% } %>
  </div>
<%- include('adminFooter') %>
