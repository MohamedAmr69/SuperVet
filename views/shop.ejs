<%-include ('header')%>
<div class="container-fluid">
  <div class="row flex-nowrap">
    <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
      <div
        class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100"
      >
        <h2 class="display-6 mt-4">Filter</h2>
        <form action="/search" method="POST" class="w-100">
          <hr class="w-100" />
          <div class="mb-3">
            <label for="search" class="form-label">Search</label>
            <input type="text" id="search" class="form-control" name="search" />
          </div>
          <hr class="w-100" />
          <div class="mb-3">
            <label class="form-label">Category</label>
            <div class="form-check">
              <input
                type="radio"
                id="cat_all"
                class="form-check-input"
                name="category"
                value="all"
              />
              <label for="cat_all" class="form-check-label mb-3">All</label>
            </div>
            <div class="form-check">
              <input
                type="radio"
                id="food"
                class="form-check-input"
                name="category"
                value="food"
              />
              <label for="food" class="form-check-label mb-3">food</label>
            </div>
            <div class="form-check">
              <input
                type="radio"
                id="grooming"
                class="form-check-input"
                name="category"
                value="grooming"
              />
              <label for="grooming" class="form-check-label mb-3"
                >Grooming</label
              >
            </div>
            <div class="form-check">
              <input
                type="radio"
                id="accessories"
                class="form-check-input"
                name="category"
                value="accessories"
              />
              <label for="accessories" class="form-check-label mb-3"
                >Accessories</label
              >
            </div>
            <div class="form-check">
              <input
                type="radio"
                id="litter"
                class="form-check-input"
                name="category"
                value="litter"
              />
              <label for="litter" class="form-check-label mb-3">Litter</label>
            </div>
            <div class="form-check">
              <input
                type="radio"
                id="supplements"
                class="form-check-input"
                name="category"
                value="supplements"
              />
              <label for="supplements" class="form-check-label mb-3"
                >Supplements</label
              >
            </div>
          </div>
          <hr class="w-100" />
          <div class="mb-3">
            <label for="customRange3" class="form-label mb-3"
              >Price range</label
            >
            <input
              type="range"
              class="form-range"
              min="0"
              max="500"
              step="100"
              id="customRange3"
              name="price"
            />
            <div class="d-flex justify-content-between">
              <span>0</span>
              <span>100</span>
              <span>200</span>
              <span>300</span>
              <span>400</span>
              <span>500</span>
            </div>
          </div>
          <hr class="w-100" />
          <div class="mb-3">
            <label class="form-label mb-3">Specific To:</label>
            <div class="form-check">
              <input
                type="radio"
                id="type_all"
                class="form-check-input"
                name="type"
                value="all"
              />
              <label for="type_all" class="form-check-label mb-3">All</label>
            </div>
            <div class="form-check">
              <input
                type="radio"
                id="type_cats"
                class="form-check-input"
                name="type"
                value="cats"
              />
              <label for="type_cats" class="form-check-label mb-3">Cats</label>
            </div>
            <div class="form-check">
              <input
                type="radio"
                id="type_dogs"
                class="form-check-input"
                name="type"
                value="dogs"
              />
              <label for="type_dogs" class="form-check-label mb-3">Dogs</label>
            </div>
            <div class="form-check">
              <input
                type="radio"
                id="type_birds"
                class="form-check-input"
                name="type"
                value="birds"
              />
              <label for="type_birds" class="form-check-label mb-3"
                >Birds</label
              >
            </div>
            <div class="form-check">
              <input
                type="radio"
                id="type_rabbits"
                class="form-check-input"
                name="type"
                value="rabbits"
              />
              <label for="type_rabbits" class="form-check-label mb-3"
                >Rabbits</label
              >
            </div>
          </div>
          <hr class="w-100" />
          <button type="submit" class="btn btn-outline-light w-100">
            Search
          </button>
        </form>
      </div>
    </div>
    <div class="col py-3">
      <div class="container mt-5">
        <% for (let i = 0; i < inventory.length; i++) { %> <% if (i % 3 === 0) {
        %>
        <div class="row">
          <% } %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img
                src="/images/inventory_images/<%= inventory[i].image %>"
                class="card-img-top"
                alt="product image"
                style="height: 300px; object-fit: contain"
              />
              <div class="card-body d-flex flex-column">
                <h5 class="card-title subheading">
                  <%= inventory[i].productName %>
                </h5>
                <div class="row">
                  <p class="card-text col mt-0"><strong>Description</strong></p>
                  <p class="card-text col mt-0">
                    <%= inventory[i].description %>
                  </p>
                </div>
                <div class="row">
                  <p class="card-text col mt-0"><strong>Price</strong></p>
                  <p class="text-muted card-text col mt-0">
                    <%= inventory[i].productPrice %>$
                  </p>
                </div>
                <a
                  href="/items?id=<%= inventory[i]._id %>"
                  class="btn mt-auto"
                  style="background-color: #e67e22; color: white"
                  >Buy</a
                >
              </div>
            </div>
          </div>
          <% if ((i + 1) % 3 === 0 || i === inventory.length - 1) { %>
        </div>
        <% } %> <% } %>
      </div>
    </div>
  </div>
</div>
<%-include ('footer')%>
